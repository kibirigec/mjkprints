{
  "name": "mjkprints-store",
  "version": "1.0.0",
  "private": true,
  "description": "Modern storefront for independent designers to sell downloadable graphic prints",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:pdf": "node test-pdf-workflow.js",
    "webhook:dev": "stripe listen --forward-to localhost:3001/api/webhooks/stripe",
    "webhook:test": "node scripts/test-webhook.js",
    "webhook:simulate": "node scripts/simulate-webhook-events.js",
    "webhook:status": "node scripts/webhook-status.js",
    "webhook:setup": "node scripts/setup-webhooks.js",
    "test:checkout": "node scripts/test-checkout.js",
    "test:system": "node scripts/test-checkout.js && npm run webhook:status"
  },
  "dependencies": {
    "@stripe/stripe-js": "^7.6.1",
    "@supabase/supabase-js": "^2.52.1",
    "canvas": "^3.1.2",
    "file-type": "^21.0.0",
    "formidable": "^3.5.4",
    "mailersend": "^2.6.0",
    "micro": "^10.0.1",
    "multer": "^2.0.2",
    "next": "^14.0.0",
    "pdf-parse": "^1.1.1",
    "pdf2pic": "^3.2.0",
    "pdfjs-dist": "^5.4.54",
    "pdfkit": "^0.17.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "sharp": "^0.34.3",
    "stripe": "^18.3.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.5",
    "autoprefixer": "^10.4.16",
    "dotenv": "^17.2.1",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "form-data": "^4.0.4",
    "jest": "^30.0.5",
    "node-fetch": "^3.3.2",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "extensionsToTreatAsEsm": [
      ".js"
    ],
    "globals": {
      "__dirname": true,
      "__filename": true
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testTimeout": 30000
  }
}
